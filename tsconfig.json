{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ],
      "tests": [
        "tests/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@apis/*": [
        "src/apis/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@fonts/*": [
        "src/assets/fonts/*"
      ],
      "@icons/*": [
        "src/icons/*"
      ],
      "@images/*": [
        "src/images/*"
      ],
      "@constanst/*": [
        "src/constants/*"
      ],
      "@screens/*": [
        "src/screens/*"
      ],
      "@navigation/*": [
        "src/navigation/*"
      ],
      "@state/*": [
        "src/state/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}